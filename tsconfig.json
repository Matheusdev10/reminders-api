{
  "compilerOptions": {
    /* --- Configurações Essenciais --- */
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "sourceMap": true,

    /* --- Boas Práticas e Qualidade de Código --- */
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "typeRoots": [
      // <--- ADICIONADO AQUI
      "./node_modules/@types",
      "./src/@types"
    ],

    /* --- Atalhos para Importação (Opcional, mas muito recomendado) --- */
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*", "src/@types/**/*"],
  "exclude": ["node_modules"]
}

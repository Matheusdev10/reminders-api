// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum ReminderStatus {
  AGENDADO
  ENVIADO
  ERRO
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  password  String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relação: Um usuário pode ter uma lista de lembretes.
  reminders Reminder[]
}

model Reminder {
  id               String   @id @default(cuid())
  message          String
  notificationDate DateTime
  status           ReminderStatus @default(AGENDADO)
  
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  // Relação: Um lembrete pertence a um usuário.
  userId           String
  user             User     @relation(fields: [userId], references: [id])

  @@map("reminders")
}